# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
API_PREFIX=/api/v1
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Database
DATABASE_URL=sqlite:///./astrodash.db
DB_ECHO=false

# Storage
DATA_DIR=/data
STORAGE_DIR=/data
USER_MODEL_DIR=/data/user_models

# ML Model Paths
DASH_MODEL_PATH=/data/pre_trained_models/dash/pytorch_model.pth
DASH_TRAINING_PARAMS_PATH=/data/pre_trained_models/dash/training_params.pickle
TRANSFORMER_MODEL_PATH=/data/pre_trained_models/transformer/TF_wiserep_v6.pt
TEMPLATE_PATH=app/astrodash_models/sn_and_host_templates.npz
LINE_LIST_PATH=app/astrodash_models/sneLineList.txt

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-production-key-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# External APIs
OSC_API_URL=https://api.sne.space

# Performance
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
